  "author": "Clément Poudrée",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MRK4/authmefast.git"
  },
  "bugs": {
    "url": "https://github.com/MRK4/authmefast/issues"
  },
  "homepage": "https://github.com/MRK4/authmefast#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/mongodb": "^4.0.7",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
